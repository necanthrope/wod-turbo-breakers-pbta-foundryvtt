<div class="tab equipment" data-group="primary" data-tab="equipment">
	<section class="sheet-tab">
		<div class="cell cell--group cell--teamQuestion">
			<label for="system.attributes.teamQuestion.value" class="cell__title">{{system.attributes.teamQuestion.label}}</label>
			{{#if system.attributes.teamQuestion.description}}<p class="cell__description cell__description--attr">{{system.attributes.teamQuestion.description}}</p>{{/if}}
			{{editor system.attributes.teamQuestion.value target="system.attributes.teamQuestion.value" button=true}}
		</div>
		<div class="cell cell--group cell--relationshipQuestions">
			<label for="system.attributes.relationshipQuestions.value" class="cell__title">{{system.attributes.relationshipQuestions.label}}</label>
			{{#if system.attributes.relationshipQuestions.description}}<p class="cell__description cell__description--attr">{{system.attributes.relationshipQuestions.description}}</p>{{/if}}
			{{editor system.attributes.relationshipQuestions.value target="system.attributes.relationshipQuestions.value" button=true owner=owner editable=editable}}
		</div>
		<div class="cell cell--group cell--influences">
			<h2 class="cell__title">
				<label class="item-group-label">{{localize "BREAKERS-SHEETS.Influences"}}<span class="item-details-toggle"><i class="fas fa-chevron-up"></i></span></label>
				<div class="item-controls">
					<button type="button" class="influence-control influence-create" title='{{localize "BREAKERS-SHEETS.InfluenceCreate"}}' data-type="influence"><i class="fas fa-plus"></i></button>
				</div>
			</h2>
			<ol class="items-list">
				{{#each flags.wod-turbo-breakers-pbta-foundryvtt.influences}}
					<li class="item flexrow" data-influence-id="{{id}}">
						<div class="influence-name">
							<img class="influence-icon" data-influence-action="roll" src="modules/wod-turbo-breakers-pbta-foundryvtt/images/shadow-follower.svg" />
							<input type="text" class="influence--name" value="{{name}}" placeholder="{{localize "BREAKERS-SHEETS.Person-Name"}}" />
						</div>
						<div class="influence-management">
							<img class="influence-icon {{#unless hasInfluenceOver}}influence-disabled{{/unless}}" data-influence-action="hasInfluenceOver" src="modules/wod-turbo-breakers-pbta-foundryvtt/images/team-downgrade.svg" title="{{localize "BREAKERS-SHEETS.HasInfluence"}}" />
							<img class="influence-icon {{#unless haveInfluenceOver}}influence-disabled{{/unless}}" data-influence-action="haveInfluenceOver" src="modules/wod-turbo-breakers-pbta-foundryvtt/images/team-upgrade.svg" title="{{localize "BREAKERS-SHEETS.HaveInfluence"}}" />
							{{#if locked}}
								<a class="influence-control influence-lock" data-influence-action="lock" title="{{localize "BREAKERS-SHEETS.Influence-Unlock"}}"><i class="fas fa-lock"></i></a>
							{{else}}
								<a class="influence-control influence-unlock" data-influence-action="lock" title="{{localize "BREAKERS-SHEETS.Influence-Lock"}}"><i class="fas fa-lock-open"></i></a>
							{{/if}}
							<a class="influence-control influence-delete" data-influence-action="delete" title="{{localize "BREAKERS-SHEETS.Delete-Influence"}}"><i class="fas fa-trash"></i></a>
						</div>
					</li>
				{{/each}}
			</ol>
		</div>
	</section>
</div>
