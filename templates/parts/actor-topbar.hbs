{{#if (objLen attrs)}}
    <div class="cell cell--attributes">
        <div class="toprow-container">


        <div class="toprow-background-col">
            <div class="flexrow xp-bar-left">
                Background
            </div>
            <div class="flexrow strain-bar-left">
                <div class="cell__attr-background">
                    <input type="text" name="system.attributes.background.value"
                           value="{{system.attributes.background.value}}" />
                </div>
            </div>
            <div class="flexrow label-bar-left">&nbsp;</div>
        </div>


        <div class="toprow-label-col">
            <div class="flexrow xp-bar">
                Experience
            </div>
            <div class="flexrow strain-bar">
                Strain
                <div class="flexrow strain-bar-borderless">
                    <input type="radio" class="attr-xp" data-name="system.attributes.strain"
                           data-step="0"  {{checked (gt system.attributes.strain.value 0)}}>
                </div>
            </div>
            <div class="flexrow label-bar">&nbsp;</div>
        </div>

        {{#each attrs.levels.options as |level key|}}
            <div class="toprow-level-{{key}}-col">
                <div class="flexrow xp-bar{{isLastLevel ../attrs.levels.options key}}">
                    {{#each (calculateXpSlots key)}}
                        <input type="radio" class="attr-xp" data-name="system.attributes.experience"
                               data-step="{{this}}" {{checked (gt ../../system.attributes.experience.value this)}}>
                        {{log key}}
                    {{/each}}
                </div>
                <div class="flexrow strain-bar{{isLastLevel ../attrs.levels.options key}}">
                    <input type="radio" class="attr-xp" data-name="system.attributes.strain"
                           data-step="{{key}}" {{checked (gt ../system.attributes.strain.value key)}}>
                </div>
                <div class="flexrow label-bar{{isLastLevel ../attrs.levels.options key}}">
                    {{level.label}}
                </div>
            </div>
        {{/each}}

        <div class="toprow-hp-armor-col">
            <div class="flexrow xp-bar-hp-armor">
                HP
            </div>
            <div class="flexrow strain-bar-hp-armor">
                <div class="strain-row-triangle-container">
                    <div class="strain-row-triangle">
                        <input type="text" name="system.attributes.armor.value"
                               value="{{system.attributes.armor.value}}" data-dtype="Number"/>
                    </div>
                </div>
            </div>
            <div class="flexrow label-bar-hp-armor">
                Armor
            </div>
        </div>

        </div>
    </div>
{{/if}}
