<div class="tab description" data-group="primary" data-tab="description">
    <div class="sheet-tab flexcol">
        {{#if isCharacter}}
            <section class="sheet-attributes flexrow">
                <div class="cell cell--image">
                    <img class="profile-img" src="{{actor.img}}" data-edit="img" height="100" width="100"/>
                </div>
                <div class="cell cell--bio biography">
                    <label class="cell__title">Biography</label>
                    <div class="editor"><a class="editor-edit"><i class="fa-solid fa-edit"></i></a>
                        <div class="editor-content" data-engine="tinymce" data-collaborate="false"
                             data-edit="system.details.biography.value"></div>
                    </div>
                </div>
            </section>
        {{/if}}
    </div>
</div>
